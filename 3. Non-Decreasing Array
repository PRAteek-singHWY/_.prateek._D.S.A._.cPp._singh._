#include <bits/stdc++.h>

// TC -> O(N^2) SC -> O(N)
bool check(int *arr, int n)
{
    for (int i = 0; i < n-1; i++)
    {

        if (arr[i] > arr[i + 1])
        {

            return false;
        }
    }
    return true;
}

bool isPossible(int *arr, int n)
{
    int changed_count = 0;

    for (int i = 0; i < n - 1; i++)
    {
        if(arr[i]>arr[i+1]){
        if (changed_count == 1)
        {
            return check(arr, n);
        }
        if (i == 0 || arr[i + 1] >= arr[i - 1])
        {
            arr[i] = arr[i - 1];
            // plus one also works
            // arr[i] = arr[i + 1];
            changed_count++;
        }
        else 
        {
            arr[i + 1] = arr[i];
            changed_count++;
        }
        }
    }

    return true;
    //  Write your code here.
}
